{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",      /* Source files are in the 'src' directory */
    "outDir": "./dist",      /* Compiled JavaScript goes to the 'dist' directory */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}